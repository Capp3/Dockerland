# EditorConfig helps maintain consistent coding styles across editors and IDEs
# For more information: https://editorconfig.org

root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# YAML files (Docker Compose, Kubernetes, etc.)
[*.yaml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
insert_final_newline = true

# ENV files
[*.env]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Git ignore and config files
[.gitignore]
trim_trailing_whitespace = false

[*.conf]
indent_style = space
indent_size = 2
