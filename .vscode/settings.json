{
  "files.associations": {
    "*.yaml": "dockercompose",
    "*.yml": "dockercompose",
    "*.env": "dotenv",
    ".env*": "dotenv",
    "*.sh": "shellscript",
    "*.bash": "shellscript"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // YAML and Docker Compose settings
  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "*.yml",
      "*.yaml"
    ]
  },
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": true,
  "yaml.format.bracketSpacing": true,

  // Docker settings
  "docker.languageServer.enable": true,
  "docker.dockerCompose.executablePath": "docker",
  "docker.dockerCompose.command": "compose",
  "docker.dockerCompose.detached": true,
  "docker.dockerCompose.verbose": true,

  // File settings
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/dist/**": true
  },

  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
