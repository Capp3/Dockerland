{
  "files.associations": {
    "*.yaml": "dockercompose",
    "*.yml": "dockercompose"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Set tab size to 2 spaces globally
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Set tab size for YAML files explicitly
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[yml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "**/docker-compose.yml",
      "**/docker-compose.yaml",
      "**/*.docker-compose.yml",
      "**/*.docker-compose.yaml",
      "**/*.yml",
      "**/*.yaml"
    ]
  },
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": true,
  "yaml.format.bracketSpacing": true,

  // Docker settings
  "docker.languageServer.enable": true,
  "docker.dockerCompose.executablePath": "docker",
  "docker.dockerCompose.command": "compose",
  "docker.dockerCompose.detached": true,
  "docker.dockerCompose.verbose": true,

  // File settings
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/dist/**": true
  },

  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
