# Use Node.js LTS base image
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install git to allow cloning
RUN apk add --no-cache git

# Clone the LinkedIn Jobs API repo
RUN git clone https://github.com/VishwaGauravIn/linkedin-jobs-api.git .

# Install dependencies
RUN npm install

# Expose the app port
EXPOSE 3000

# Start the server
CMD ["npm", "start"]
